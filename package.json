{
    "name": "es-environments-action",
    "version": "1.0.0",
    "private": true,
    "description": "Automate environment setup",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write **/*.ts",
        "lint": "eslint src/**/*.ts",
        "package": "ncc build --source-map",
        "all": "npm run build && npm run format && npm run lint && npm run package"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/envio-simples/es-environments-action.git"
    },
    "keywords": [
        "actions",
        "secrets",
        "environment"
    ],
    "author": "Envio Simples",
    "license": "Apache-2.0",
    "dependencies": {
        "@actions/core": "^1.4.0",
        "@actions/github": "^5.0.0",
        "@actions/io": "^1.1.1",
        "fs-extra": "^10.0.0",
        "glob": "^7.1.7",
        "tweetsodium": "^0.0.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.12",
        "@types/glob": "^7.1.4",
        "@types/node": "^16.3.3",
        "@typescript-eslint/parser": "^4.28.3",
        "@vercel/ncc": "^0.29.0",
        "eslint": "^7.31.0",
        "eslint-plugin-github": "^4.1.1",
        "prettier": "2.2.1",
        "typescript": "^4.1.3"
    }
}
